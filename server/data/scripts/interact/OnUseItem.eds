Sub OnUseItem(Index, ItemNum, InventorySlot)

	Select Case ItemNum

		Case 7 ' Scripted Item Demo
			Call PlayerMsg(Index, "Hello there, I'm a scripted item.", Yellow)
			Call PlayerMsg(Index, "As you can see my messages are passed on just fine from the server side.", Green)
			Call PlayerMsg(Index, "Colors appear to be functional as well!", Cyan)
		
	End Select

End Sub